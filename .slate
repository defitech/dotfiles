# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config keyboardLayout qwertz

# Positions aliases
alias full            move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias center          move screenOriginX+screenSizeX*0.2;screenOriginY  screenSizeX*0.6;screenSizeY
alias lefthalf        move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY
alias righthalf       move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY
alias lefthalftop     move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY/2
alias lefthalfbottom  move screenOriginX;screenOriginY+screenSizeY/2    screenSizeX*0.4;screenSizeY/2
alias righthalftop    move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY/2
alias righthalfbottom move screenOriginX+screenSizeX*0.4;screenOriginY+screenSizeY/2   screenSizeX*0.6;screenSizeY/2

# Location Bindings
bind m:ctrl;alt;cmd ${full}
bind x:ctrl;alt;cmd ${center}
bind left:ctrl;alt;cmd ${lefthalf}
bind right:ctrl;alt;cmd ${righthalf}
bind left:ctrl;cmd;shift ${lefthalftop}
bind left:ctrl;cmd ${lefthalfbottom}
bind right:ctrl;cmd;shift ${righthalftop}
bind right:ctrl;cmd ${righthalfbottom}
